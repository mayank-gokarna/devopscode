pipeline {
    agent none
    stages {
    stage('Back-end') {
        agent {
            docker {image 'maven:3-alpine'}
        }
        steps {
            sh 'mvn --verson'
        }
    }
    stage( 'front-end') {
        agent {
            docker { image 'node:14-alpine'}
        }
        steps {
            sh 'node --versoin'
        }
    }

